<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="200dp"/>
            <padding android:top="130dp"/>
            <stroke
                android:color="@android:color/system_accent1_600"
                android:width="5dp"
                android:dashGap="5dp"
                android:dashWidth="5dp"/>
            <corners android:radius="20dp" /> <!-- Скругленные углы -->
        </shape></item>
    <item>
        <shape android:shape="rectangle">
            <size android:height="50dp"/>
            <gradient
                android:type="linear"
                android:centerY="0.6"
                android:angle="-90"
                android:startColor="@android:color/system_accent1_600"
                android:endColor="@android:color/system_accent3_700"/>

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" />
        </shape>
    </item>


</layer-list>