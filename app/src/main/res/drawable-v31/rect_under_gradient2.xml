<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <size android:height="100dp"/>
            <padding android:bottom="30dp"/>
            <gradient
                android:type="linear"
                android:centerY="0.5"
                android:angle="-90"
                android:startColor="@android:color/system_accent3_800"
                android:endColor="@android:color/transparent"/>
            <corners android:radius="20dp" />
        </shape></item>
    <item>
        <shape android:shape="rectangle" >
            <size android:height="100dp"/>
            <solid android:color="@android:color/system_accent3_800"/>
            <stroke
                android:color="@android:color/system_accent3_500"
                android:width="5dp" />
            <corners android:radius="20dp" /> <!-- Скругленные углы -->
        </shape></item>

</layer-list>