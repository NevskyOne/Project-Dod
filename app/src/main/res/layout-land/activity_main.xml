<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_secondary20"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/main_input"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:autoText="true"
        android:background="@null"
        android:breakStrategy="high_quality"
        android:clickable="true"
        android:contextClickable="true"
        android:cursorVisible="true"
        android:editable="true"
        android:fitsSystemWindows="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif-black"
        android:foregroundGravity="bottom"
        android:hint="Start typing.."
        android:hyphenationFrequency="none"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/design_default_color_on_primary"
        android:textColorHint="#00FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:autoText="true"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="textEnd"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="60sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:baselineAlignedChildIndex="5"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="211dp">

            <Button
                android:id="@+id/all_clear"
                style="@style/Widget.Material3.Button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="1dp"
                android:insetTop="1dp"
                android:insetRight="1dp"
                android:insetBottom="1dp"
                android:maxHeight="60dip"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="AC"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="24sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/bracket_open"
                style="@style/Widget.Material3.Button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="1dp"
                android:insetTop="1dp"
                android:insetRight="1dp"
                android:insetBottom="1dp"
                android:maxHeight="60dip"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="("
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="24sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/bracket_close"
                style="@style/Widget.Material3.Button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="1dp"
                android:insetTop="1dp"
                android:insetRight="1dp"
                android:insetBottom="1dp"
                android:maxHeight="60dip"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text=")"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="24sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/exponent"
                style="@style/Widget.Material3.Button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="1dp"
                android:insetTop="1dp"
                android:insetRight="1dp"
                android:insetBottom="1dp"
                android:maxHeight="60dip"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="^"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="24sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/root"
                style="@style/Widget.Material3.Button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="1dp"
                android:insetTop="1dp"
                android:insetRight="1dp"
                android:insetBottom="1dp"
                android:maxHeight="60dip"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="√"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="24sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/delete"
                style="@style/Widget.Material3.Button"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="1dp"
                android:insetTop="1dp"
                android:insetRight="1dp"
                android:insetBottom="1dp"
                android:maxHeight="60dip"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="DEL"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="24sp"
                app:iconPadding="0dp" />

        </TableRow>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button_1"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="1"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp"
                tools:text="1" />

            <Button
                android:id="@+id/button_2"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="4"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/button_3"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="3"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/multiplication"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="×"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button_4"
                style="@style/Widget.Material3.Button"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:text="4"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/button_5"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:text="5"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/button_6"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:text="6"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/devide"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:minWidth="20dip"
                android:minHeight="20dip"
                android:text="÷"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button_7"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="7"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/button_8"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="8"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/button_9"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="9"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/plus"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button_0"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="0"
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/dot_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_primary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="."
                android:textColor="@color/material_dynamic_primary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/button_equals"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_tertiary30"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="="
                android:textColor="@color/material_dynamic_tertiary90"
                android:textSize="48sp" />

            <Button
                android:id="@+id/minus"
                style="@style/Widget.Material3.Button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/material_dynamic_secondary70"
                android:fontFamily="sans-serif-black"
                android:insetLeft="3dp"
                android:insetTop="3dp"
                android:insetRight="3dp"
                android:insetBottom="3dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_secondary90"
                android:textSize="48sp"
                app:iconPadding="0dp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>