<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FirstProject" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/material_dynamic_secondary20</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Прозрачные системные панели для версий до Android 21 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/material_dynamic_tertiary40</item>
    </style>

    <style name = "Numbers">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:backgroundTint">@color/material_dynamic_primary40</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:insetLeft">3dp</item>
        <item name="android:insetTop">3dp</item>
        <item name="android:insetRight">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/material_dynamic_primary90</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name = "SmallNum">
        <item name="android:layout_width">66dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/material_dynamic_primary40</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:insetLeft">3dp</item>
        <item name="android:insetTop">3dp</item>
        <item name="android:insetRight">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/material_dynamic_primary90</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name = "SideButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/material_dynamic_primary40</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:insetLeft">3dp</item>
        <item name="android:insetTop">3dp</item>
        <item name="android:insetRight">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:maxHeight">200dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:strokeWidth">0</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">@color/material_dynamic_primary80</item>
        <item name="android:strokeColor">@color/material_dynamic_primary40</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">13dp</item>
        <item name="android:textColor">@color/material_dynamic_primary90</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name = "SideButtonInactive">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:insetLeft">3dp</item>
        <item name="android:insetTop">3dp</item>
        <item name="android:insetRight">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:maxHeight">200dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:strokeWidth">1</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">13dp</item>
        <item name="android:textColor">@color/material_dynamic_neutral60</item>
        <item name="android:strokeColor">@color/material_dynamic_neutral60</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name = "Quadrocircle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:backgroundTint">@color/material_dynamic_primary10</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxWidth">88dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">10dp</item>
    </style>

</resources>